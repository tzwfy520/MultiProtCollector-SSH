# SSH采集器环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 基础配置
APP_NAME=SSH采集器
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# 服务配置
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
COLLECTOR_ID=collector-001

# 数据库配置
DATABASE_URL=sqlite:///data/collector.db

# 控制器配置（可选）
CONTROLLER_URL=http://controller:9000
CONTROLLER_ENABLED=false
CONTROLLER_API_KEY=your-api-key-here

# 消息队列配置（可选）
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_ENABLED=false
RABBITMQ_QUEUE_NAME=ssh_tasks
RABBITMQ_EXCHANGE_NAME=ssh_collector

# Redis配置（可选）
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=false

# 安全配置
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=300
MAX_RETRY_ATTEMPTS=3

# SSH配置
SSH_CONNECT_TIMEOUT=10
SSH_AUTH_TIMEOUT=10
SSH_BANNER_TIMEOUT=15
SSH_BLOCKING_TIMEOUT=20

# 日志配置
LOG_FILE_PATH=logs/collector.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_ROTATION=daily

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# 性能配置
WORKER_PROCESSES=1
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# 开发配置
RELOAD=false
ACCESS_LOG=true